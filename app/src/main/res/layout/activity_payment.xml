<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uddishverma22.hackdtu.PaymentActivity"
    android:weightSum="1">


    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="15dp"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@android:color/darker_gray"-->
        <!--android:textAppearance="?android:textAppearanceMedium"-->
        <!--android:text="You're A Hero To Someone, Somewhere, Who Received Your Gracious Gift Of Life."/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="209dp"
        android:src="@drawable/img_one"
        android:layout_weight="0.28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="Select Amount"/>


            <LinearLayout
                android:layout_margin="10dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/money_dec"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <EditText
                    android:id="@+id/payment_amt"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:text="1"
                    />

                </LinearLayout>

                <ImageView
                    android:id="@+id/money_inc"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"/>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="PAY NOW"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="#2567ab"
        android:textAppearance="?android:textAppearanceMedium"/>


</LinearLayout>
